<div class="contents row">
  <div class="container">
    <h3>再入力する</h3>
    <%= form_with model: @fat, url: fat_path, local: true do |f| %>
      <%= render 'error_messages', model: @fat %>
      <p> 年 </p> 
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :day,
                    class:'select-box',
                    id:"date",
                    use_month_numbers: true,
                    prompt:'---',
                    start_year: 2019,
                    end_year: Time.now.year,
                    date_separator: '%s'),
                  "<p> 月 </p>", "<p> 日 </p>") + "<p> </p>" %>
      </div>
      <%= f.text_field :weight, placeholder: "体重" %>
      <%= f.text_field :body_fat, placeholder: "体脂肪率" %>
      <%= f.submit "再計算する" %>
    <% end %>
  </div>
</div>
